                                    <ImageBrush ImageSource="/Images/radioUnCheck.png"/>
                                </RadioButton.Background>
                            </RadioButton>
                            <Canvas Background="Black" Width="{Binding pageWidth}" Opacity="0.5" Grid.Row="1" Grid.ColumnSpan="2"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
