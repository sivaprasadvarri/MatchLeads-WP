                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="AUTO"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}" Foreground="Black" FontFamily="Segoe UI" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="10,0,0,0"/>
